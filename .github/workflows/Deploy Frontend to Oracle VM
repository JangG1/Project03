name: Deploy Frontend to Oracle VM

on:
  push:
    branches:
      - master

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3  # 저장소의 파일을 CI 환경으로 체크아웃

    - name: Set up SSH
      uses: webfactory/ssh-agent@v0.5.3
      with:
        ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}  # GitHub Secrets에서 SSH 개인 키 사용

    - name: Deploy Frontend to Oracle VM
      run: |
        ssh -o StrictHostKeyChecking=no username@your-vm-ip << 'EOF'
          # 프론트엔드 프로젝트 디렉토리로 이동
          cd /var/www  # 프론트엔드 프로젝트가 위치한 디렉토리로 수정

          # 최신 코드 가져오기
          git pull origin main

          # 종속성 설치 및 빌드
          npm install
          npm run build

          # 빌드 결과물 복사
          sudo cp -r dist/* /var/www/html/  # 빌드 결과물을 웹 서버의 루트 디렉토리로 복사.
        EOF
